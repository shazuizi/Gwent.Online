<Page x:Class="Gwent.Client.DeckManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="DeckManagementPage">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Deck Management"
                   FontSize="24"
                   Margin="0,0,0,10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Available Decks" Grid.Column="0" Margin="0,0,10,0">
                <ListBox x:Name="DecksListBox"
                         DisplayMemberPath="DeckName"/>
            </GroupBox>

            <GroupBox Header="Selected Deck" Grid.Column="1">
                <StackPanel>
                    <TextBlock x:Name="SelectedDeckNameTextBlock"
                               FontSize="16"
                               Margin="0,0,0,10"/>
                    <TextBlock x:Name="SelectedDeckDetailsTextBlock"/>
                </StackPanel>
            </GroupBox>
        </Grid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button x:Name="SetAsActiveDeckButton"
                    Content="Set as active deck"
                    Width="150"
                    Margin="0,0,10,0"
                    Click="SetAsActiveDeckButton_Click"/>
            <Button x:Name="BackButton"
                    Content="Back"
                    Width="100"
                    Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
