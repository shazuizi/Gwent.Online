<Page x:Class="Gwent.Client.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MainMenuPage">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Gwent PvP - Main Menu" FontSize="24" Margin="0,0,0,10"/>

        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Nickname:"/>
            <TextBox x:Name="NicknameTextBox" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Server address:"/>
            <TextBox x:Name="ServerAddressTextBox" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Port:"/>
            <TextBox x:Name="PortTextBox" Width="100"/>
        </StackPanel>

        <GroupBox Header="Role" Grid.Row="4" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical">
                <RadioButton x:Name="HostRadioButton"
                             Content="Host (create server)"
                             IsChecked="True"/>
                <RadioButton x:Name="GuestRadioButton"
                             Content="Guest (join existing server)"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Row="5" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="ManageDecksButton"
                    Content="Manage Decks"
                    Width="120"
                    Margin="0,0,10,0"
                    Click="ManageDecksButton_Click"/>
            <Button x:Name="StartGameButton"
                    Content="Start Game"
                    Width="120"
                    Click="StartGameButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
