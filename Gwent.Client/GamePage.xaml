<Page x:Class="Gwent.Client.GamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="GamePage">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Pasek z nickami, rolami, siłą, życiami, leaderem, talią, cmentarzem i pogodą -->
        <Border Grid.Row="0" Padding="5" BorderThickness="0,0,0,1" BorderBrush="Gray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Ty -->
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="You" FontWeight="Bold"/>
                    <TextBlock x:Name="LocalPlayerNicknameTextBlock"/>
                    <TextBlock x:Name="LocalPlayerRoleTextBlock" FontSize="11" Foreground="Gray"/>
                    <TextBlock x:Name="LocalPlayerStrengthTextBlock" FontSize="14" FontWeight="Bold"/>
                    <TextBlock x:Name="LocalLivesTextBlock" FontSize="12"/>
                    <TextBlock x:Name="LocalLeaderTextBlock" FontSize="12"/>
                    <TextBlock x:Name="LocalDeckTextBlock" FontSize="11"/>
                    <TextBlock x:Name="LocalGraveyardTextBlock" FontSize="11"/>
                    <TextBlock x:Name="LocalMulliganTextBlock" FontSize="11"/>
                    <TextBlock x:Name="LocalPassStatusTextBlock" FontSize="11" Foreground="DarkOrange"/>
                </StackPanel>

                <!-- Środek: runda + pogoda -->
                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock x:Name="RoundNumberTextBlock"
                               FontWeight="Bold"
                               FontSize="14"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="WeatherTextBlock"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Przeciwnik -->
                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right">
                    <TextBlock Text="Opponent" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="OpponentNicknameTextBlock" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="OpponentRoleTextBlock" FontSize="11" Foreground="Gray" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="OpponentPlayerStrengthTextBlock" FontSize="14" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="OpponentLivesTextBlock" FontSize="12" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="OpponentLeaderTextBlock" FontSize="12" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="OpponentDeckTextBlock" FontSize="11" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="OpponentGraveyardTextBlock" FontSize="11" HorizontalAlignment="Right"/>
                    <TextBlock x:Name="OpponentPassStatusTextBlock" FontSize="11" Foreground="DarkOrange" HorizontalAlignment="Right"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Plansza: rzędy graczy z wynikiem każdego rzędu oraz graveyard -->
        <Grid Grid.Row="1" Margin="0,10,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Opponent rows" FontWeight="Bold" Margin="0,0,0,5"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Margin="0,0,0,5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Melee"/>
                            <TextBlock Text=" (" />
                            <TextBlock x:Name="OpponentMeleeStrengthTextBlock"/>
                            <TextBlock Text=")" />
                        </StackPanel>
                    </GroupBox.Header>
                    <ListBox x:Name="OpponentMeleeRowListBox"
                             DisplayMemberPath="Name" />
                </GroupBox>

                <GroupBox Grid.Row="1" Margin="0,0,0,5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Ranged"/>
                            <TextBlock Text=" (" />
                            <TextBlock x:Name="OpponentRangedStrengthTextBlock"/>
                            <TextBlock Text=")" />
                        </StackPanel>
                    </GroupBox.Header>
                    <ListBox x:Name="OpponentRangedRowListBox"
                             DisplayMemberPath="Name" />
                </GroupBox>

                <GroupBox Grid.Row="2">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Siege"/>
                            <TextBlock Text=" (" />
                            <TextBlock x:Name="OpponentSiegeStrengthTextBlock"/>
                            <TextBlock Text=")" />
                        </StackPanel>
                    </GroupBox.Header>
                    <ListBox x:Name="OpponentSiegeRowListBox"
                             DisplayMemberPath="Name" />
                </GroupBox>
            </Grid>

            <TextBlock Grid.Row="2" Text="Your rows" FontWeight="Bold" Margin="0,10,0,5"/>

            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <GroupBox Grid.Row="0" Margin="0,0,0,5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Melee"/>
                            <TextBlock Text=" (" />
                            <TextBlock x:Name="LocalMeleeStrengthTextBlock"/>
                            <TextBlock Text=")" />
                        </StackPanel>
                    </GroupBox.Header>
                    <ListBox x:Name="LocalMeleeRowListBox"
                             DisplayMemberPath="Name"
                             SelectionChanged="LocalBoardRow_SelectionChanged" />
                </GroupBox>

                <GroupBox Grid.Row="1" Margin="0,0,0,5">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Ranged"/>
                            <TextBlock Text=" (" />
                            <TextBlock x:Name="LocalRangedStrengthTextBlock"/>
                            <TextBlock Text=")" />
                        </StackPanel>
                    </GroupBox.Header>
                    <ListBox x:Name="LocalRangedRowListBox"
                             DisplayMemberPath="Name"
                             SelectionChanged="LocalBoardRow_SelectionChanged" />
                </GroupBox>

                <GroupBox Grid.Row="2">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Siege"/>
                            <TextBlock Text=" (" />
                            <TextBlock x:Name="LocalSiegeStrengthTextBlock"/>
                            <TextBlock Text=")" />
                        </StackPanel>
                    </GroupBox.Header>
                    <ListBox x:Name="LocalSiegeRowListBox"
                             DisplayMemberPath="Name"
                             SelectionChanged="LocalBoardRow_SelectionChanged" />
                </GroupBox>
            </Grid>

            <!-- Twój graveyard (potrzebny do targetowania Medica) -->
            <GroupBox Grid.Row="4" Header="Your graveyard" Margin="0,10,0,0">
                <ListBox x:Name="LocalGraveyardListBox"
                         Height="80"
                         DisplayMemberPath="Name"
                         SelectionChanged="LocalGraveyardListBox_SelectionChanged"/>
            </GroupBox>
        </Grid>

        <!-- Ręka + przyciski -->
        <DockPanel Grid.Row="2">
            <GroupBox Header="Your hand" DockPanel.Dock="Top" Margin="0,0,10,0">
                <ListBox x:Name="HandListBox"
                         DisplayMemberPath="Name"
                         Height="100"/>
            </GroupBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Button x:Name="PlayCardButton"
                        Content="Play selected card"
                        Width="150"
                        Margin="0,0,10,0"
                        Click="PlayCardButton_Click"/>
                <Button x:Name="MulliganButton"
                        Content="Mulligan"
                        Width="90"
                        Margin="0,0,10,0"
                        Click="MulliganButton_Click"/>
                <Button x:Name="LeaderAbilityButton"
                        Content="Use Leader Ability"
                        Width="130"
                        Margin="0,0,10,0"
                        Click="LeaderAbilityButton_Click"/>
                <Button x:Name="PassButton"
                        Content="Pass"
                        Width="80"
                        Margin="0,0,10,0"
                        Click="PassButton_Click"/>
                <Button x:Name="SurrenderButton"
                        Content="Surrender"
                        Width="90"
                        Click="SurrenderButton_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
