<Window x:Class="Gwent.Client.Wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gwint – Połączenie" Height="260" Width="420"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Nick:" Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtNick" Width="250"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Tryb:" Width="80" VerticalAlignment="Center"/>
            <RadioButton x:Name="RbHost" Content="Hostuj" IsChecked="True" Margin="0,0,10,0"/>
            <RadioButton x:Name="RbJoin" Content="Dołącz"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Adres serwera:" Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtAddress" Width="250"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Port:" Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtPort" Width="80"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="Anuluj" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
