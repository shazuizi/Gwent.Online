<Window x:Class="Gwent.Client.Wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="400">
    

    <StackPanel Margin="0,10,0,0">
        <RadioButton x:Name="RbHost" Content="Host" GroupName="Mode"/>
        <RadioButton x:Name="RbJoin" Content="Join" GroupName="Mode" IsChecked="True"/>

        <StackPanel Margin="0,10,0,0">
            
            <TextBlock Text="Name:" Margin="0,10,0,0"/>
            <TextBox x:Name="TxtName" Text="Player"/>
            
            <TextBlock Text="Address:"/>
            <TextBox x:Name="TxtServerAddress" Text="127.0.0.1"/>

            <TextBlock Text="Port:" Margin="0,10,0,0"/>
            <TextBox x:Name="TxtPort" Text="9000"/>

        </StackPanel>

        <Button x:Name="BtnOk" Content="OK" Width="120" Margin="0,20,0,0" Click="BtnOk_Click"/>
    </StackPanel>

</Window>
