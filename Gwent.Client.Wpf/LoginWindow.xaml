<Window x:Class="Gwent.Client.Wpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gwint Online - logowanie" Height="260" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Nick:" VerticalAlignment="Center" Width="80"/>
            <TextBox x:Name="TxtNickname" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,8">
            <RadioButton x:Name="RbHost" Content="Hostuj grę" IsChecked="True" Margin="0,0,10,0"/>
            <RadioButton x:Name="RbJoin" Content="Dołącz do gry"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="Adres serwera:" VerticalAlignment="Center" Width="100"/>
            <TextBox x:Name="TxtServerAddress" Width="230" Text="127.0.0.1"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,8">
            <TextBlock Text="Port:" VerticalAlignment="Center" Width="100"/>
            <TextBox x:Name="TxtPort" Width="80" Text="9000"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock x:Name="TxtError" Foreground="Red" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <Button Content="OK" Width="80" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>
